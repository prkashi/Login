<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/a"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:background="@android:drawable/toast_frame"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_toEndOf="@+id/textView13"
        android:layout_marginStart="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignStart="@+id/editText2"
        android:id="@+id/editText4"
        android:background="@android:drawable/toast_frame" />

    <TextView
        android:text="CHEZZAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:id="@+id/textView22"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="34sp"
        android:textStyle="normal|bold|italic"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText7"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:background="@android:drawable/toast_frame"
        android:layout_alignBaseline="@+id/textView21"
        android:layout_alignBottom="@+id/textView21"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText3"
        android:background="@android:drawable/toast_frame"
        android:layout_alignBottom="@+id/signuppassword"
        android:layout_alignStart="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText2"
        android:background="@android:drawable/toast_frame"
        android:layout_alignBaseline="@+id/textView20"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignStart="@+id/editText3" />

    <TextView
        android:text="Password"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:id="@+id/textView18"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/signuppassword" />

    <TextView
        android:text="Full Name"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:id="@+id/textView20"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView18"
        android:layout_alignStart="@+id/textView18" />

    <TextView
        android:text="Password"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:id="@+id/signuppassword"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_above="@+id/editText4"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginBottom="17dp" />

    <Button
        android:text="REGISTER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@android:color/holo_green_dark"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView20" />

    <TextView
        android:text="Country"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:id="@+id/textView21"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_below="@+id/textView20"
        android:layout_alignStart="@+id/textView20"
        android:layout_marginTop="28dp" />

    <TextView
        android:text="Username"
        android:layout_marginStart="20dp"
        android:id="@+id/textView13"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_height="40dp"
        android:layout_width="110dp"
        android:layout_above="@+id/editText3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp" />

</RelativeLayout>