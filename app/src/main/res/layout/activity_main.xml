<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.punithrkashi.login.MainActivity"
    tools:context2="com.example.punithrkashi.login.newone">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordtext"
        android:background="@android:drawable/toast_frame"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/password"
        android:layout_alignBottom="@+id/password"
        android:layout_toEndOf="@+id/password"
        android:layout_marginStart="20dp" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/password"
        android:layout_alignStart="@+id/password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/usertext"
        android:background="@android:drawable/toast_frame"
        android:layout_alignBaseline="@+id/username"
        android:layout_alignBottom="@+id/username"
        android:layout_alignStart="@+id/passwordtext" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/career"
        android:id="@+id/imageView5"
        android:layout_above="@+id/usertext"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:text="SIGNUP"
        android:layout_height="wrap_content"
        android:id="@+id/signup"
        android:background="@android:color/holo_orange_dark"
        android:layout_width="wrap_content"
        android:onClick="signup"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/second"
        android:layout_marginBottom="14dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:onClick="sendMessage"
        android:id="@+id/second"
        android:background="@android:color/holo_green_dark"
        android:elevation="20dp"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/signup"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:textColor="@android:color/white"
        android:textColorHighlight="@android:color/white"
        android:textSize="18sp"
        android:password="false"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/second"
        android:layout_toStartOf="@+id/name" />

    <TextView
        android:text="CHEZZAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textColor="@android:color/holo_green_dark"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_above="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

</RelativeLayout>
